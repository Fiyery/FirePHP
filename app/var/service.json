{
    "config" : {
        "class" : "Config", 
        "args" : [
            "app/var/config.json",
            "app/var/config_user.json"
        ]
    },

    "error" : {
        "class" : "ExceptionManager"
    },

    "log" : {
        "class" : "FileLogger", 
        "args" : [
            "$config->path->log",
            "$config->log->granularity"
        ]
    },

    "session" : {
        "class" : "Session"
    },

    "database" : {
        "class" : "DataBase",
        "args" : [
            "$config->db->host",
            "$config->db->name",
            "$config->db->user",
            "$config->db->pass",
            "$config->db->charset"
        ]
    },

    "tpl" : {
        "class" : "Template",
        "args" : [
            "$config->path->tpl_cache"
        ]
    },

    "request" : {
        "class" : "Request"
    },

    "response" : {
        "class" : "Response",
        "args" : [
            "$session",
            "$tpl"
        ]
    },

    "router" : {
        "class" : "Router",
        "args" : [
            "$request"
        ]
    },

    "access" : {
        "class" : "Access"
    },

    "cache" : {
        "class" : "Cache",
        "args" : [
            "$config->path->cache"
        ]
    },

    "css" : {
        "class" : "Css",
        "args" : [
            "$config->path->css_cache"
        ]
    },

    "js" : {
        "class" : "Javascript",
        "args" : [
            "$config->path->js_cache"
        ]
    },

    "crypt" : {
        "class" : "Crypt"
    },

    "upload" : {
        "class" : "Upload"
    },

    "browser" : {
        "class" : "Browser",
        "args" : [
            "$config->browser->file"
        ]
    },

    "mail" : {
        "class" : "Mail"
    }
}